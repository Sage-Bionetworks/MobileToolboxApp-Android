<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sagebionetworks.research.mobiletoolbox.app">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name="org.sagebionetworks.research.mobiletoolbox.app.MtbApplication"
        android:allowBackup="false"
        android:allowNativeHeapPointerTagging="false"
        android:icon="@mipmap/ic_app_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name="org.sagebionetworks.research.mobiletoolbox.app.ui.study.PrivacyNoticeActivity"></activity>
        <activity android:name="org.sagebionetworks.research.mobiletoolbox.app.ui.login.LoginActivity" />
        <!--
        https://github.com/readdle/swift-android-toolchain/issues/18
                android:allowNativeHeapPointerTagging="false"
        -->
        <activity android:name="org.sagebionetworks.research.mobiletoolbox.app.MtbMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.sagebionetworks.research.mobiletoolbox.app.ui.AssessmentListActivity" />
        <activity
            android:name="org.sagebionetworks.research.mobiletoolbox.app.MtbAssessmentActivity"
            android:screenOrientation="portrait" />

        <receiver android:name=".notif.AlarmReceiver" />
        <receiver android:name=".notif.BootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>
    </application>

</manifest>