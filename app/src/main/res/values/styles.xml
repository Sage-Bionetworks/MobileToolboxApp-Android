<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Sage.BaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/textColor</item>
    </style>

    <style name="Sage.BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="materialButtonStyle">@style/Widget.Sage.Button</item>
        <item name="tabStyle">@style/Widget.Sage.TabLayout</item>
    </style>
    <style name="Widget.Sage.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.Sage.SmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.Sage.Btn</item>
        <item name="textAllCaps">false</item>
        <item name="android:minHeight">60dp</item>
    </style>
    <style name="TextAppearance.Sage.TabLayout" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
    </style>
    <style name="ShapeAppearance.Sage.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>
    <style name="Widget.Sage.TabLayout" parent="Widget.MaterialComponents.TabLayout">s
        <item name="tabTextColor">@color/textColor</item>
    </style>


    <style name="TextAppearance.Sage" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextAppearance.Sage.H1" parent="TextAppearance.Sage">
        <item name="fontFamily">@font/playfair_display_italic</item>
        <item name="android:textSize">21sp</item>
    </style>
    <style name="TextAppearance.Sage.H2" parent="TextAppearance.Sage">
        <item name="fontFamily">@font/playfair_display_italic</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Sage.H3" parent="TextAppearance.Sage">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextAppearance.Sage.H4" parent="TextAppearance.Sage">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextAppearance.Sage.H5" parent="TextAppearance.Sage">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.Sage.H6" parent="TextAppearance.Sage">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextAppearance.Sage.H7" parent="TextAppearance.Sage">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Sage.P1" parent="TextAppearance.Sage">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.Sage.P2" parent="TextAppearance.Sage">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextAppearance.Sage.P3" parent="TextAppearance.Sage">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Sage.Btn" parent="TextAppearance.Sage">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Sage.NavActive" parent="TextAppearance.Sage">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="TextAppearance.Sage.NavInactive" parent="TextAppearance.Sage">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">12dp</item>
    </style>

</resources>